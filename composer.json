{
    "name": "odan/slim4-skeleton",
    "type": "project",
    "description": "A Slim 4 skeleton",
    "keywords": [
        "slim-framework",
        "skeleton",
        "slim",
        "slim4",
        "apache"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "cakephp/chronos": "^2",
        "cakephp/database": "^4",
        "fig/http-message-util": "^1.1",
        "fullpipe/twig-webpack-extension": "^4.0",
        "monolog/monolog": "^2",
        "odan/phinx-migrations-generator": "^5.1",
        "php-di/php-di": "^6.3",
        "selective/array-reader": "^1",
        "selective/basepath": "^1",
        "selective/validation": "^0.11",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.7",
        "slim/twig-view": "^3",
        "symfony/console": "^5.2",
        "symfony/http-foundation": "^5.2",
        "symfony/translation": "^5.2",
        "symfony/twig-bridge": "^5.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "overtrue/phplint": "^2.3",
        "phpstan/phpstan": "0.*",
        "phpunit/phpunit": "^9.4.4",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/filesystem": "^5.2",
        "symfony/finder": "^5.2"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Utility/translate.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "npm install",
            "npm run build"
        ],
        "build": "ant build",
        "build:cc": "ant cc",
        "check": [
            "@lint",
            "@cs:check",
            "@sniffer:check",
            "@phpstan",
            "@test:coverage"
        ],
        "cs:check": "php-cs-fixer fix --dry-run --format=txt --verbose --diff --diff-format=udiff --config=.cs.php",
        "cs:fix": "php-cs-fixer fix --config=.cs.php",
        "lint": "phplint ./ --exclude=vendor --no-interaction --no-cache",
        "migration:create": "phinx create -c config/phinx.php --ansi",
        "migration:diff": "phinx-migrations generate --overwrite -c config/phinx.php --ansi",
        "migration:migrate": "phinx migrate -c config/phinx.php --ansi -vvv",
        "migration:dump": "php bin/console.php schema-dump",
        "phpstan": "phpstan analyse bin src tests config --level=max -c phpstan.neon --no-progress --ansi",
        "sniffer:check": "phpcs --standard=phpcs.xml",
        "sniffer:fix": "phpcbf --standard=phpcs.xml",
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage",
        "twig:compile": "php bin/console.php compile-twig --ansi"
    }
}
